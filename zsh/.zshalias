#!/bin/sh
# cd
# !! TODO: convert to function
alias devm="cd ~/Documents/business/mozard-coding-projects"
alias devp="cd ~/Documents/personal/personal-coding-projects"
alias devmf="cd ~/Documents/business/mozard-coding-projects/mozard-frontend/"

# Open/update
alias ozsh="code ~/.zshrc"
alias uzsh="source ~/.zshrc"
alias oalias="code ~/dotfiles/zsh/.zshalias"
alias orepo='open $(jq -r ".homepage" package.json)'

# Git
# [ohmyzsh git plugin](https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/git)
alias gadot="git add ."
alias gcz="git cz"

# Yarn
# [ohmyzsh yarn plugin](https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/yarn)
alias ysb="yarn storybook"

# Taskwarrior
# https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/taskwarrior
alias t="task"

# Python
alias python="python3"

# Misc
alias what-time="date '+%H:%M:%S'"
alias c="clear"
alias allow="sudo chmod +x"
alias path="tr ':' '\n' <<< "'$PATH'""
alias help="tldr"

# Shell scripts
alias kanikeenkortebroekaan="~/dotfiles/kortebroek.sh"
alias brew:up="~/dotfiles/brew/update-brew.sh"

# softwareupdate -i -a -> geeft geen restart notification in vscode terminal...
alias mac:up="brew:up && npm update -g && softwareupdate -i -a"
alias ls="ls -1"
alias all-work="lp ~/dotfiles/shining.md"