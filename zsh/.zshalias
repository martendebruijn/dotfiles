#!/bin/sh
# ls
alias lsdevm="ls ~/Documents/business/mozard-coding-projects"
alias lsdevp="ls ~/Documents/personal/personal-coding-projects"

# Open/update
alias o="open"
alias uzsh="source ~/.zshrc"
alias orepo='open $(jq -r ".homepage" package.json)'

# Git
# [ohmyzsh git plugin](https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/git)
alias gadot="git add ."
alias gcup="git commit -m 'update dependencies'"
alias gcv="git commit -m 'increment version number'"
alias gcrl="git commit -m 'resolve linter warnings'"
alias gcrm="git commit -m 'resolve merge conflicts'"

# npm
alias npmrmrf="rm -rf node_modules && rm package-lock.json && npm i"
alias npmtest="npm run lint && npm test && npm run build"
alias npmt="npm test"
alias npmta="npm run test:all"
alias npml="npm run lint"
alias npmb="npm run build"
alias npmd="npm run dev"
alias npms="npm start"
alias npmr="npm run"
alias npmI="npm init"
alias npmi="npm install"
alias npmid="npm install -D"
alias npmaf="npm audit fix"
alias npmu="npm uninstall"

alias c.="code ."

# Python
alias python="python3"
alias py="python3"

# Misc
alias c="clear"
alias allow="sudo chmod +x"
alias path="tr ':' '\n' <<< "'$PATH'""
alias help="tldr"
alias f="fuck"
alias get-broken-links="find . -type l ! -exec test -e {} \; -print"
alias mac:up='maintenance -rp $HOME/dotfiles/brew'
alias ls="ls -1"
