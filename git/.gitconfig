[includeIf "gitdir/i:~/Documents/personal/personal-coding-projects/"]
    path = ~/Documents/personal/personal-coding-projects/.gitconfig

[includeIf "gitdir/i:~/Documents/business/business-coding-projects/"]
    path = ~/Documents/business/business-coding-projects/.gitconfig
[core]
	excludesfile = ~/.gitignore_global
	editor = code -w
	pager = diff-so-fancy | less --tabs=4 -RFX
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[pull]
	rebase = false
[commit]
	gpgsign = true
[rerere]
	enabled = true
[gpg]
	format = ssh
[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
